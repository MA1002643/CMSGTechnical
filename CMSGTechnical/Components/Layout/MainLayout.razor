@using CMSGTechnical.Code
@using CMSGTechnical.Components.Shared
@inherits LayoutComponentBase

<div class="page">
    <CascadingValue TValue="BasketService" Value="@BasketService">
        <div class="sidebar">
            <NavMenu/>
        </div>

        <main>
            <div class="top-row px-4">
                <a href="https://learn.microsoft.com/aspnet/core/" target="_blank">About</a>
            </div>

            <article class="content px-4">
                @Body
            </article>
        </main>
    </CascadingValue>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>


@code
{
    [Inject] private BasketService BasketService { get; set; } = default!;

    protected override async Task OnInitializedAsync()
    {
        await BasketService.InitializeAsync();
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await BasketService.InitializeJsAsync();
        }
    }
}
